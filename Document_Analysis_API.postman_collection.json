	"item": [
		{
			"name": "1. 获取索引状态",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"状态码为 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"返回索引状态信息\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('index_loaded');",
							"    pm.expect(jsonData).to.have.property('index_dir');",
							"    pm.expect(jsonData).to.have.property('docs_root');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/document/status",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"document",
						"status"
					]
				},
				"description": "获取文档索引的当前状态信息"
			},
			"response": []
		},
